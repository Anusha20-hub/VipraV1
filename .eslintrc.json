{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "max-len": [
            "error",
            {
                "code": 800
            }
        ],
        "new-cap": [
            "error",
            {
                "newIsCap": true
            }
        ]
    }
}
