<h3><a class="btn btn-outline-dark mr-4" href="/contact"><i class="fa fa-plus"></i> Create New</a> Contact List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>
                <a href="/contact/{{this._id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a href="/contact/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>